// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/universal
{
	"name": "Zephyr Development Environment",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	"customizations": {
		//Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"twxs.cmake",
				"ms-vscode.cpptools-extension-pack",
				"jeff-hykin.better-cpp-syntax",
				"ms-vscode-remote.remote-containers",
				"ms-vscode-remote.remote-wsl",
				"ms-azuretools.vscode-docker",
				"adam-bender.commit-message-editor",
				"codezombiech.gitignore",
				"marus25.cortex-debug",
				"bierner.github-markdown-preview",
				"ms-vscode.vscode-embedded-tools",
				"zxh404.vscode-proto3",
				"ms-azuretools.vscode-docker",
				"mads-hartmann.bash-ide-vscode"
			]
		}
	},
	"features": {"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}},
	"init": true,
	"privileged": true,
	"remoteEnv": { "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"},
	"initializeCommand": "mkdir -p tools/tmp && nohup bash -c scripts/init.sh > tools/tmp/init.log",
	"postStartCommand": "(test -d .west || (west init -l app && west update)) && west update"
}